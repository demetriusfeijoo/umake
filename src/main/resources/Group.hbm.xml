<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC  
   "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="br.com.umake.model.Group" table="umake_groups">
		<meta attribute="class-description">Est√° classe contem tudo relacionado com a entidade groups.</meta>
		
		<!-- Identificador da classe -->
		<id name="id" column="id" type="long">
			<generator class="native" />
		</id>

		<!-- Propriedades da classe -->
		<property name="name"/>
		<property name="dateOfRegistration" />

		<!-- Relacionamento da classe -->
		<many-to-one name="parentGroup" column="parentGroup"  class="br.com.umake.model.Group" />  
		
 		<set name="users" table="umake_users_groups">
			<key column="id_group" />
			<many-to-many column="id_user" class="br.com.umake.model.User" />
		</set> 

 		<set name="permissions" table="umake_groups_permissions">
			<key column="id_group" />
			<many-to-many column="id_permission" class="br.com.umake.model.Permission" />
		</set> 
		
	</class>
</hibernate-mapping> 