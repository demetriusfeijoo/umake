<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

	<session-factory>

		<property name="hibernate.connection.username">umakecom_db</property>
		<property name="hibernate.connection.password">djsd1234</property>
		<property name="hibernate.connection.url">jdbc:mysql://umake.com.br:3306/umakecom_db</property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
		<property name="hibernate.hbm2ddl.auto">update</property>
		<property name="show_sql">false</property>
		<property name="format_sql">true</property>
		
		<mapping class="br.com.umake.model.User" />
		<mapping class="br.com.umake.model.Group" /> 
	</session-factory>

</hibernate-configuration>
	