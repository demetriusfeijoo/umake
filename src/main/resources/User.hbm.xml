<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC  
   "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="br.com.umake.model.User" table="umake_users">

		<!-- Identificador da classe -->
		<id name="id" column="id" type="long">
			<generator class="native" />
		</id>

		<!-- Propriedades da classe -->
		<property name="name" />
		<property name="login" />
		<property name="password" />
		<property name="email" />
		<property name="dateOfRegistration" update="false" />
		<property name="dateLastVisit" update="false" />
		<property name="receiveEmail" />
		<property name="userBlock" />

		<!-- Relacionamento da classe -->
 		<set name="groups" table="umake_users_groups" cascade="none">
			<key column="id_user" />
			<many-to-many column="id_group" class="br.com.umake.model.Group" not-found="ignore" />
		</set> 
		
 		<set name="permissions" table="umake_users_permissions" cascade="none">
			<key column="id_user" />			
			<many-to-many column="id_permission" class="br.com.umake.model.Permission" not-found="ignore" />
		</set> 
		
	</class>
</hibernate-mapping> 
