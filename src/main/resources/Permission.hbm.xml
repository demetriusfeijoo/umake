<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC  
   "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="br.com.umake.model.Permission" table="umake_permissions">

		<!-- Identificador da classe -->
		<id name="id" column="id" type="long">
			<generator class="native" />
		</id>

		<!-- Propriedades da classe -->
		<property name="context" />
		<property name="type" />
		<property name="dateOfRegistration" />

		<!-- Relacionamento da classe -->
 		<set name="groups" table="umake_groups_permissions" lazy="true" cascade="none">
			<key column="id_permission" />
			<many-to-many column="id_group" class="br.com.umake.model.Group" />
		</set> 
		
 		<set name="users" table="umake_users_permissions" lazy="true" cascade="none">
			<key column="id_permission" />
			<many-to-many column="id_user" class="br.com.umake.model.UserAdm" />
		</set> 
		
	</class>
</hibernate-mapping> 