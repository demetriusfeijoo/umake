<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC  
   "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="br.com.umake.model.UserAdm" table="umake_users">

		<!-- Identificador da classe -->
		<id name="id" column="id" type="long">
			<generator class="native" />
		</id>

		<!-- Propriedades da classe -->
		<property name="name" not-null="true"/>
		<property name="login" not-null="true" />
		<property name="password" not-null="true" />
		<property name="email" not-null="true" />
		<property name="dateOfRegistration" />
		<property name="dateLastVisit" />
		<property name="receiveEmail" not-null="true" />
		<property name="userBlock" not-null="true" />

		<!-- Relacionamento da classe -->
 		<set name="groups" table="umake_users_groups" lazy="true" cascade="none">
			<key column="id_user" />
			<many-to-many column="id_group" class="br.com.umake.model.Group" not-found="ignore" />
		</set> 
		
 		<set name="permissions" table="umake_users_permissions" lazy="true" cascade="none">
			<key column="id_user" />			
			<many-to-many column="id_permission" class="br.com.umake.model.PermissionAdm" not-found="ignore" />
		</set> 
		
	</class>
</hibernate-mapping> 
